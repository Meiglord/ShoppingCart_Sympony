{% extends 'base.html.twig' %}

{% block title %}Bonsoir
{% endblock %}

{% block body %}
	<style></style>

	<div class="">

		<h1>{{'produit.titre'|trans}}</h1>
		{% if produits is not empty %}
			<table class="table">
				<thead>
					<tr>
						<th>{{'produit.nom'|trans}}</th>
						<th>{{'produit.quantite'|trans}}</th>
						<th>{{'produit.prix'|trans}}</th>
						<th>{{'produit.photo'|trans}}</th>

					</tr>
				</thead>
				<tbody>
					{% for produit in produits %}
						<tr>
							<td>
								<a href="{{ path('un_produit', {'id':produit.id}) }}">{{ produit.nom }}</a>
							</td>
							<td>{{ produit.quantite }}</td>
							<td>{{ produit.prix }}â‚¬</td>
							<td>
								<img src="{{ asset('images/' ~ produit.photo) }}"></td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<hr>
		{% else %}
			<p>{{'produit.noproduit'|trans}}
			{% endif %}

			{{ form(form_ajout_produit) }}

			</div>
		{% endblock %}
